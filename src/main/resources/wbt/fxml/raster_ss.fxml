<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="50.0" layoutY="50.0" text="Input raster file :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="inRasCB" layoutX="170.0" layoutY="48.0" promptText="-- Select --" />
      <Label layoutX="170.0" layoutY="85.0" text="-- OR --" />
      <TextField fx:id="inRasTF" layoutX="170.0" layoutY="115.0" prefWidth="250.0" promptText="Location" />
      <Button fx:id="inRasBtn" layoutX="430.0" layoutY="115.0" mnemonicParsing="false" text="..." />
      <Button fx:id="applyBtn" layoutX="50.0" layoutY="410.0" mnemonicParsing="false" text="Apply" />
      <ProgressIndicator fx:id="progressInd" layoutX="105.0" layoutY="410.0" prefHeight="25.0" prefWidth="25.0" visible="false" />
      <Label fx:id="finishedLB" layoutX="105.0" layoutY="413.0" text="Finished!" textFill="#00c800" visible="false">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="unsuccessfulLB" layoutX="105.0" layoutY="413.0" text="Something went wrong! Please try again." textFill="RED" visible="false">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextArea fx:id="rasterSSTA" layoutX="50.0" layoutY="170.0" prefHeight="220.0" prefWidth="370.0" />
   </children>
</AnchorPane>
