      <Label layoutX="48.0" layoutY="163.0" text="Input pour points (outlet) file :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="inShpTF" layoutX="255.0" layoutY="162.0" prefWidth="250.0" promptText="Location" />
      <Button fx:id="inShpBtn" layoutX="515.0" layoutY="162.0" mnemonicParsing="false" text="..." />
      <CheckBox fx:id="essCBX" layoutX="255.0" layoutY="265.0" mnemonicParsing="false" text="D8 pointer uses the ESRI style scheme" />
   </children>
