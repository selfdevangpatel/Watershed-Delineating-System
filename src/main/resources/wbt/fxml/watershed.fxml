<AnchorPane prefHeight="430.0" prefWidth="630.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="65.0" layoutY="50.0" text="Input D8 pointer raster file :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="inRasCB" layoutX="255.0" layoutY="48.0" promptText="-- Select --" />
      <Label layoutX="255.0" layoutY="87.0" text="-- OR --" />
      <TextField fx:id="inRasTF" layoutX="255.0" layoutY="115.0" prefWidth="250.0" promptText="Location" />
      <Button fx:id="inRasBtn" layoutX="515.0" layoutY="115.0" mnemonicParsing="false" text="..." />
      <Label layoutX="127.0" layoutY="205.0" text="Output raster file :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="outRasTF" layoutX="255.0" layoutY="203.0" prefWidth="250.0" promptText="Location" />
      <Button fx:id="outRasBtn" layoutX="515.0" layoutY="203.0" mnemonicParsing="false" text="..." />
      <Button fx:id="applyBtn" layoutX="255.0" layoutY="355.0" mnemonicParsing="false" text="Apply" />
